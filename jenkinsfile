pipeline {
           agent {
		           node {
				          label '2'
						  customWorkspace '/mnt/project-2022'
						   }
						    }
							stages {
							stage ('install-httpd') {
							steps {
							          sh "sudo yum install httpd -y "
									  }
									  }
									  stage ('start-httpd') {
							steps {
							          sh "sudo service httpd start"
									  }
									  } 
							stage ('cp-file') {
							steps {
							
							          sh " cp index.html  /var/www/html"
									  }
									  }
									  stage ('chmod-file') {
							steps {
							          sh "chmod 777  /var/www/html/index.html"
									  }
									  }
									  }
									  }
									  
